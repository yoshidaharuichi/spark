    <script>
        (function() {
            // --- 1. å…¨å±€é…ç½®ä¸çŠ¶æ€ ---
            let timeScale = 1.0;
            let currentYear = 0;
            let eraStatus = 'CHAOTIC'; // 'STABLE' or 'CHAOTIC'
            let stableStartYear = 0;
            let maxStableDuration = 0; // è®°å½•æœ€é•¿æ’çºªå…ƒ
            
            // æ–‡æ˜åˆ¤å®šå‚æ•°
            const MIN_HABITABLE_TEMP = 20; // è™šæ‹Ÿå•ä½
            const MAX_HABITABLE_TEMP = 80;
            let consecutiveStableFrames = 0;
            const FRAMES_TO_STABILIZE = 60; // éœ€è¦æŒç»­å¤šå°‘å¸§æ‰ç®—è¿›å…¥æ’çºªå…ƒ

            // UI å…ƒç´ 
            const uiSpeedValue = document.getElementById('speedValue');
            const speedSlider = document.getElementById('speedSlider');
            const uiYear = document.getElementById('year-counter');
            const uiMaxStable = document.getElementById('max-stable');
            const uiEraBadge = document.getElementById('era-badge');
            const uiEraLog = document.getElementById('era-log');
            
            speedSlider.addEventListener('input', (e) => {
                timeScale = parseFloat(e.target.value);
                uiSpeedValue.innerText = timeScale.toFixed(1) + 'x';
            });

            // --- 2. åˆå§‹åŒ–åœºæ™¯ ---
            const container = document.getElementById('canvas-container');
            const scene = new THREE.Scene();
            
            // é›¾æ•ˆè®¾ç½®ï¼šæå…¶å¾®å¼±ï¼Œä¿è¯èƒŒæ™¯æ˜Ÿç©ºå¯è§
            scene.fog = new THREE.FogExp2(0x020202, 0.0003); 

            const camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 0.1, 10000); // Far plane increased
            camera.position.set(0, 100, 300);

            const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: false });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(window.devicePixelRatio);
            renderer.toneMapping = THREE.ACESFilmicToneMapping;
            renderer.toneMappingExposure = 1.0;
            
            while(container.firstChild) {
                container.removeChild(container.firstChild);
            }
            container.appendChild(renderer.domElement);

            // --- 3. æè´¨å·¥åœº ---
            function createGlowTexture(colorStr) {
                const canvas = document.createElement('canvas');
                canvas.width = 128; 
                canvas.height = 128;
                const context = canvas.getContext('2d');
                const gradient = context.createRadialGradient(64, 64, 0, 64, 64, 64);
                gradient.addColorStop(0, 'rgba(255, 255, 255, 1)'); 
                gradient.addColorStop(0.2, colorStr); 
                gradient.addColorStop(0.5, colorStr.replace('1)', '0.1)'));
                gradient.addColorStop(1, 'rgba(0,0,0,0)');
                context.fillStyle = gradient;
                context.fillRect(0, 0, 128, 128);
                return new THREE.CanvasTexture(canvas);
            }

            // --- 4. è§†è§‰å‡çº§ï¼šä¿®å¤ç‰ˆé“¶æ²³èƒŒæ™¯ ---
            function createGalaxyBackground() {
                const geometry = new THREE.BufferGeometry();
                const count = 15000; // å¢åŠ ç²’å­æ•°é‡
                const positions = new Float32Array(count * 3);
                const colors = new Float32Array(count * 3);
                
                const colorCenter = new THREE.Color(0xffffff); // ä¸­å¿ƒäº®ç™½
                const colorOut = new THREE.Color(0x3366ff); // å¤–å›´å†·è“

                for (let i = 0; i < count; i++) {
                    let x, y, z;
                    let r, g, b;
                    
                    // 75% çš„æ˜Ÿæ˜Ÿé›†ä¸­åœ¨é“¶æ²³ç›˜é¢ï¼Œåˆ¶é€ æ˜æ˜¾çš„â€œå¸¦çŠ¶â€
                    if (Math.random() < 0.75) {
                        const angle = Math.random() * Math.PI * 2;
                        // è·ç¦»ä¸­å¿ƒ 2000 - 6000
                        const radius = 2000 + Math.random() * 4000; 
                        // æ‰å¹³åŒ– Y è½´
                        const spread = 200 * (radius / 2000); // è·ç¦»è¶Šè¿œè¶Šæ•£
                        
                        x = Math.cos(angle) * radius;
                        z = Math.sin(angle) * radius;
                        y = (Math.random() - 0.5) * spread;

                        // é¢œè‰²ï¼šè¶Šé è¿‘ä¸­å¿ƒè¶Šäº®ç™½
                        const mixRatio = Math.random();
                        const col = colorCenter.clone().lerp(colorOut, mixRatio);
                        r = col.r;
                        g = col.g;
                        b = col.b;
                    } else {
                        // 25% å…¨å‘æ•£å¸ƒï¼Œä½œä¸ºèƒŒæ™¯åº•å™ª
                        const radius = 4000 + Math.random() * 4000;
                        const theta = Math.random() * Math.PI * 2;
                        const phi = Math.acos(2 * Math.random() - 1);
                        x = radius * Math.sin(phi) * Math.cos(theta);
                        y = radius * Math.sin(phi) * Math.sin(theta);
                        z = radius * Math.cos(phi);

                        // èƒŒæ™¯æ˜Ÿè¾ƒæš—
                        r = 0.5; g = 0.5; b = 0.6; 
                    }

                    positions[i * 3] = x;
                    positions[i * 3 + 1] = y;
                    positions[i * 3 + 2] = z;

                    colors[i*3] = r;
                    colors[i*3+1] = g;
                    colors[i*3+2] = b;
                }

                geometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
                geometry.setAttribute('color', new THREE.BufferAttribute(colors, 3));

                const material = new THREE.PointsMaterial({
                    size: 4.0, // å¢å¤§å°ºå¯¸ç¡®ä¿å¯è§
                    vertexColors: true,
                    transparent: true,
                    opacity: 0.9,
                    sizeAttenuation: true, // å¯ç”¨è¿‘å¤§è¿œå°
                    blending: THREE.AdditiveBlending, // å åŠ æ··åˆï¼Œå¢åŠ äº®åº¦
                    depthWrite: false
                });

                const galaxy = new THREE.Points(geometry, material);
                scene.add(galaxy);
                return galaxy;
            }
            const backgroundStars = createGalaxyBackground();

            // --- 5. å¤©ä½“ç±» (æ’æ˜Ÿ & è¡Œæ˜Ÿ) ---
            const G = 1.2; 
            const SOFTENING = 5; 
            const TRAIL_LENGTH = 700; 

            class CelestialBody {
                constructor(type, colorHex, mass, radius, glowColorStr, name) {
                    this.type = type; // 'STAR' or 'PLANET'
                    this.mass = mass;
                    this.name = name;
                    this.velocity = new THREE.Vector3();
                    this.position = new THREE.Vector3();
                    
                    // å‡ ä½•ä½“
                    const geometry = new THREE.SphereGeometry(radius, 32, 32);
                    let material;
                    
                    if (type === 'STAR') {
                        material = new THREE.MeshStandardMaterial({ 
                            color: colorHex, 
                            emissive: colorHex,
                            emissiveIntensity: 3.0,
                            roughness: 0.2
                        });
                    } else {
                        // è¡Œæ˜Ÿæè´¨
                        material = new THREE.MeshStandardMaterial({
                            color: 0xaaaaaa,
                            roughness: 0.8,
                            metalness: 0.2
                        });
                    }
                    this.mesh = new THREE.Mesh(geometry, material);

                    // ä»…æ’æ˜Ÿå‘å…‰
                    if (type === 'STAR') {
                        // å…‰æ™•
                        const spriteMaterial = new THREE.SpriteMaterial({ 
                            map: createGlowTexture(glowColorStr),
                            color: 0xffffff,
                            transparent: true,
                            opacity: 0.7,
                            blending: THREE.AdditiveBlending
                        });
                        this.glow = new THREE.Sprite(spriteMaterial);
                        this.glow.scale.set(radius * 10, radius * 10, 1);
                        this.mesh.add(this.glow);

                        // å…‰æº
                        this.light = new THREE.PointLight(colorHex, 1.5, 600);
                        this.light.decay = 2;
                        this.mesh.add(this.light);
                    }

                    // å°¾è¿¹ (æ‰€æœ‰å¤©ä½“éƒ½æœ‰ï¼Œä½†æ ·å¼ä¸åŒ)
                    this.trailPositions = new Float32Array(TRAIL_LENGTH * 3);
                    this.trailGeometry = new THREE.BufferGeometry();
                    this.trailGeometry.setAttribute('position', new THREE.BufferAttribute(this.trailPositions, 3));
                    
                    const trailMaterial = new THREE.LineBasicMaterial({
                        color: type === 'STAR' ? colorHex : 0xffffff,
                        transparent: true,
                        opacity: type === 'STAR' ? 0.6 : 0.3,
                        blending: THREE.AdditiveBlending,
                        linewidth: 2 
                    });
                    this.trail = new THREE.Line(this.trailGeometry, trailMaterial);
                    scene.add(this.trail);
                    scene.add(this.mesh);
                }

                setPosition(x, y, z) {
                    this.position.set(x, y, z);
                    this.mesh.position.copy(this.position);
                    // é‡ç½®å°¾è¿¹
                    for(let i=0; i<TRAIL_LENGTH*3; i++) this.trailPositions[i] = 0; 
                }

                setVelocity(x, y, z) {
                    this.velocity.set(x, y, z);
                }

                updateTrail() {
                    const positions = this.trailGeometry.attributes.position.array;
                    // ç§»åŠ¨æ•°æ®
                    for (let i = (TRAIL_LENGTH - 1) * 3; i > 2; i -= 3) {
                        positions[i] = positions[i - 3];
                        positions[i + 1] = positions[i - 2];
                        positions[i + 2] = positions[i - 1];
                    }
                    // æ›´æ–°å¤´éƒ¨
                    positions[0] = this.position.x;
                    positions[1] = this.position.y;
                    positions[2] = this.position.z;
                    this.trailGeometry.attributes.position.needsUpdate = true;
                }
            }

            const bodies = [];
            let planet; // å¼•ç”¨

            // --- 6. æ ¸å¿ƒé€»è¾‘ï¼šç‰©ç†ä¸çºªå…ƒ ---
            function updatePhysicsAndLogic() {
                const dt = 0.05 * timeScale;
                
                // æ›´æ–°æ—¶é—´
                currentYear += dt * 0.5; 
                uiYear.innerText = Math.floor(currentYear);

                // --- ç‰©ç†åŠ›å­¦è®¡ç®— (N-Body) ---
                const forces = bodies.map(() => new THREE.Vector3());
                let totalFluxOnPlanet = 0; // è¡Œæ˜Ÿæ¥æ”¶çš„æ€»å…‰ç…§

                for (let i = 0; i < bodies.length; i++) {
                    for (let j = 0; j < bodies.length; j++) {
                        if (i === j) continue;
                        const bodyA = bodies[i];
                        const bodyB = bodies[j];

                        // ç®€åŒ–ï¼šè¡Œæ˜Ÿè´¨é‡æå°ï¼Œä¸å½±å“æ’æ˜Ÿ (ä½†å—æ’æ˜Ÿå½±å“)
                        if (bodyA.type === 'STAR' && bodyB.type === 'PLANET') continue;

                        const diff = new THREE.Vector3().subVectors(bodyB.position, bodyA.position);
                        const distSq = diff.lengthSq();
                        const dist = Math.sqrt(distSq);
                        
                        // ä¸‡æœ‰å¼•åŠ›
                        const forceMagnitude = (G * bodyA.mass * bodyB.mass) / (distSq + SOFTENING);
                        forces[i].add(diff.normalize().multiplyScalar(forceMagnitude));

                        // é¡ºä¾¿è®¡ç®—è¡Œæ˜Ÿå—åˆ°æ’æ˜Ÿçš„è¾å°„é€šé‡ (Flux ~ 1/r^2)
                        // ç”¨äºçºªå…ƒåˆ¤å®š
                        if (bodyA.type === 'PLANET' && bodyB.type === 'STAR') {
                            // è¾å°„é‡ = æ’æ˜Ÿè´¨é‡(ä»£è¡¨å…‰åº¦) / è·ç¦»å¹³æ–¹
                            totalFluxOnPlanet += (bodyB.mass * 100) / distSq; 
                        }
                    }
                }

                // åº”ç”¨åŠ›å¹¶æ›´æ–°ä½ç½®
                for (let i = 0; i < bodies.length; i++) {
                    const body = bodies[i];
                    const acceleration = forces[i].divideScalar(body.mass);
                    body.velocity.add(acceleration.multiplyScalar(dt));
                    body.position.add(body.velocity.clone().multiplyScalar(dt));
                    body.mesh.position.copy(body.position);
                    body.updateTrail();
                }

                // --- çºªå…ƒåˆ¤å®šé€»è¾‘ ---
                updateEraSystem(totalFluxOnPlanet);
            }

            function updateEraSystem(flux) {
                // åˆ¤å®šç¯å¢ƒæ˜¯å¦å®œå±…
                const isHabitable = flux >= MIN_HABITABLE_TEMP && flux <= MAX_HABITABLE_TEMP;

                if (isHabitable) {
                    consecutiveStableFrames++;
                } else {
                    // å¦‚æœç¯å¢ƒæ¶åŠ£
                    if (eraStatus === 'STABLE') {
                        // æ’çºªå…ƒç»“æŸï¼Œæ–‡æ˜æ¯ç­
                        triggerDestruction(flux);
                    }
                    consecutiveStableFrames = 0;
                }

                // çŠ¶æ€æœºåˆ‡æ¢ï¼šè¿›å…¥æ’çºªå…ƒ
                if (eraStatus === 'CHAOTIC' && consecutiveStableFrames > FRAMES_TO_STABILIZE) {
                    eraStatus = 'STABLE';
                    stableStartYear = currentYear;
                    
                    uiEraBadge.innerText = "æ’çºªå…ƒ (Stable Era)";
                    uiEraBadge.className = "era-status era-stable";
                    uiEraBadge.innerText += " " + Math.floor(currentYear) + "èµ·";
                    
                    uiEraLog.innerHTML = `<span class="highlight">æ–‡æ˜èŒå‘ï¼š</span>ç¯å¢ƒé€‚å®œï¼Œæ–°çš„æ–‡æ˜åœ¨æ’çºªå…ƒä¸­è¯ç”Ÿã€‚`;
                }

                // æ›´æ–°æ’çºªå…ƒæ˜¾ç¤º
                if (eraStatus === 'STABLE') {
                    const duration = Math.floor(currentYear - stableStartYear);
                    uiEraBadge.innerText = `æ’çºªå…ƒæŒç»­ä¸­: ${duration} å¹´`;
                    
                    // å®æ—¶æ›´æ–°æœ€é•¿è®°å½•
                    if (duration > maxStableDuration) {
                        maxStableDuration = duration;
                        uiMaxStable.innerText = maxStableDuration;
                    }
                }
            }

            function triggerDestruction(finalFlux) {
                const duration = Math.floor(currentYear - stableStartYear);
                eraStatus = 'CHAOTIC';
                
                uiEraBadge.innerText = "ä¹±çºªå…ƒ (Chaotic Era)";
                uiEraBadge.className = "era-status era-chaotic";

                let cause = "";
                if (finalFlux > MAX_HABITABLE_TEMP) {
                    cause = "ä¸‰æ—¥å‡Œç©ºï¼Œçƒˆç„°ç„šå¤©";
                } else {
                    cause = "é•¿å¤œæ¼«æ¼«ï¼Œä¸¥å¯’æ°¸å¤œ";
                }

                const logMsg = `ç¬¬ <span class="highlight">${Math.floor(currentYear)}</span> å¹´ï¼šæ–‡æ˜æ¯ç­ã€‚<br>
                                åŸå› ï¼š${cause}ã€‚<br>
                                æœ¬æ¬¡æ’çºªå…ƒç»´æŒäº† ${duration} å¹´ã€‚`;
                uiEraLog.innerHTML = logMsg;
            }

            // --- 7. åˆå§‹åŒ–åœºæ™¯ç‰©ä½“ ---
            function resetSimulation() {
                // æ¸…ç†æ—§ç‰©ä½“
                bodies.forEach(b => {
                    scene.remove(b.mesh);
                    scene.remove(b.trail);
                });
                bodies.length = 0;
                
                // é‡ç½®UI
                currentYear = 0;
                consecutiveStableFrames = 0;
                eraStatus = 'CHAOTIC';
                uiEraBadge.className = "era-status era-chaotic";
                uiEraBadge.innerText = "ä¹±çºªå…ƒ (Chaotic Era)";
                uiEraLog.innerText = "å®‡å®™é‡å¯ï¼Œç­‰å¾…æ–‡æ˜è¯ç”Ÿ...";
                
                // æ³¨æ„ï¼šè¿™é‡Œä¸é‡ç½® maxStableDurationï¼Œä»¥ä¾¿åœ¨å¤šæ¬¡é‡å¯ä¸­ä¿ç•™æœ€é«˜è®°å½•
                // å¦‚æœéœ€è¦é‡ç½®ï¼Œå¯ä»¥å–æ¶ˆä¸‹é¢è¿™è¡Œçš„æ³¨é‡Š
                // maxStableDuration = 0; uiMaxStable.innerText = 0;

                // åˆ›å»ºæ’æ˜Ÿ
                const starA = new CelestialBody('STAR', 0xff5555, 180, 2.5, 'rgba(255, 50, 50, 1)', 'A');
                const starB = new CelestialBody('STAR', 0x55aaff, 140, 2.2, 'rgba(50, 100, 255, 1)', 'B');
                const starC = new CelestialBody('STAR', 0xffdd44, 110, 1.8, 'rgba(255, 200, 0, 1)', 'C');

                // éšæœºåŒ–æ’æ˜Ÿä½ç½®å’Œé€Ÿåº¦
                [starA, starB, starC].forEach(star => {
                    const r = 50 + Math.random() * 40; 
                    const theta = Math.random() * Math.PI * 2;
                    const phi = Math.acos(2 * Math.random() - 1);
                    
                    star.setPosition(
                        r * Math.sin(phi) * Math.cos(theta),
                        r * Math.sin(phi) * Math.sin(theta),
                        r * Math.cos(phi)
                    );

                    // åˆ‡å‘é€Ÿåº¦ + éšæœºæ‰°åŠ¨
                    const randomVec = new THREE.Vector3(Math.random()-0.5, Math.random()-0.5, Math.random()-0.5);
                    const tangent = new THREE.Vector3().crossVectors(star.position, randomVec).normalize();
                    const speed = 0.5 + Math.random() * 0.5;
                    star.setVelocity(tangent.x * speed, tangent.y * speed, tangent.z * speed);
                    
                    bodies.push(star);
                });

                // åˆ›å»ºè¡Œæ˜Ÿ (ä¸‰ä½“äºº)
                planet = new CelestialBody('PLANET', 0xffffff, 0.01, 0.8, '', 'Trisolaris');
                
                // å°†è¡Œæ˜Ÿæ”¾åœ¨ Star C é™„è¿‘
                const hostStar = starC;
                const offset = new THREE.Vector3(15, 0, 0); 
                planet.setPosition(
                    hostStar.position.x + offset.x,
                    hostStar.position.y + offset.y,
                    hostStar.position.z + offset.z
                );
                
                const orbitSpeed = Math.sqrt(G * hostStar.mass / 15);
                planet.setVelocity(
                    hostStar.velocity.x,
                    hostStar.velocity.y + orbitSpeed, 
                    hostStar.velocity.z
                );

                bodies.push(planet);
            }

            const resetBtn = document.getElementById('resetBtn');
            const newBtn = resetBtn.cloneNode(true);
            resetBtn.parentNode.replaceChild(newBtn, resetBtn);
            newBtn.addEventListener('click', resetSimulation);

            // --- 8. æ‘„åƒæœºæ§åˆ¶ ---
            let isDragging = false;
            let previousMousePosition = { x: 0, y: 0 };
            let camTheta = 0;
            let camPhi = Math.PI / 3;
            let baseDistance = 180;
            
            // æ‘„åƒæœºå¹³æ»‘è¿½è¸ª
            let currentFocus = new THREE.Vector3();

            function updateCamera() {
                // è¿½è¸ªæ‰€æœ‰ç‰©ä½“çš„é‡å¿ƒ
                let center = new THREE.Vector3();
                for(let b of bodies) center.add(b.position);
                center.divideScalar(bodies.length);

                // è®¡ç®—æœ€å¤§åŒ…å›´ç›’ï¼Œå†³å®šç¼©æ”¾
                let maxDist = 0;
                for(let b of bodies) {
                    const d = b.position.distanceTo(center);
                    if(d > maxDist) maxDist = d;
                }

                currentFocus.lerp(center, 0.05);
                
                const targetDist = baseDistance + maxDist * 1.5;
                
                const x = currentFocus.x + targetDist * Math.sin(camPhi) * Math.cos(camTheta);
                const y = currentFocus.y + targetDist * Math.cos(camPhi);
                const z = currentFocus.z + targetDist * Math.sin(camPhi) * Math.sin(camTheta);

                camera.position.set(x, y, z);
                camera.lookAt(currentFocus);
            }

            // è¾“å…¥äº‹ä»¶
            document.addEventListener('mousedown', () => isDragging = true);
            document.addEventListener('mouseup', () => isDragging = false);
            document.addEventListener('mousemove', (e) => {
                if (isDragging) {
                    camTheta -= (e.offsetX - previousMousePosition.x) * 0.005;
                    camPhi -= (e.offsetY - previousMousePosition.y) * 0.005;
                    camPhi = Math.max(0.1, Math.min(Math.PI - 0.1, camPhi));
                }
                previousMousePosition = { x: e.offsetX, y: e.offsetY };
            });
            document.addEventListener('wheel', (e) => {
                baseDistance += e.deltaY * 0.1;
                baseDistance = Math.max(50, Math.min(1000, baseDistance));
            });
            window.addEventListener('resize', () => {
                camera.aspect = window.innerWidth / window.innerHeight;
                camera.updateProjectionMatrix();
                renderer.setSize(window.innerWidth, window.innerHeight);
            });

            // --- 9. ä¸»å¾ªç¯ ---
            function animate() {
                requestAnimationFrame(animate);

                updatePhysicsAndLogic();
                updateCamera();

                // é“¶æ²³æ—‹è½¬
                backgroundStars.rotation.y += 0.0001;

                // æ’æ˜Ÿå…‰æ™•å‘¼å¸æ•ˆæœ
                const time = Date.now() * 0.002;
                bodies.forEach((b, idx) => {
                    if(b.type === 'STAR') {
                        const scaleBase = b.mass/50 * 5; 
                        const pulse = 1 + Math.sin(time * timeScale + idx) * 0.05; 
                        b.glow.scale.set(scaleBase * pulse * 2.5, scaleBase * pulse * 2.5, 1);
                    }
                });

                renderer.render(scene, camera);
            }

            resetSimulation();
            animate();
        })();
    </script>
</body>
</html>
